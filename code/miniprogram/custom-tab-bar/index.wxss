.clearfix::before,
.clearfix::after{
  clear: both;
  display: table;
  content: '';
}

.tab-bar {
  position: fixed;
  bottom: -150rpx;
  left: 0;
  right: 0;
  height: 300rpx;
  background: white;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: center;
  border-radius: 20%/50% 50% 0 0;
  box-shadow:2rpx 2rpx 20rpx rgba(0,0,0,.2);
  z-index: 10000;
}

.mybox{
  width:100%;
  height:50%;
  display: flex;
}
.tab-bar .mybox .imgContainer{
  height: 150rpx;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
}
.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
} 

.tab-bar-item .image {
  width: 80rpx;
  height: 80rpx;
}

.tab-bar-item .imgContainer {
  font-size: 10px;
}
.tab-bar .middle{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 0;
  align-self: center;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: red; */
}
.tab-bar .middle .image{
  width: 50%;
  height: 50%;
  /* background-color: #bfa; */
}