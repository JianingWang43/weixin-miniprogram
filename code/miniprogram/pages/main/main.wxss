/* pages/main/main.wxss */
.clearfix::before,
.clearfix::after{
  clear: both;
  display: table;
  content: "";
}

page{
  /* background-color: #1d4d86; */
  padding: 0;
  border: 0;
  margin-bottom: 155rpx;
  background-image: url("https://7869-xiaochengxu-7g034yit756a0de1-1304336989.tcb.qcloud.la/background.png?sign=ccca475052482427253176124d81c570&t=1609941972");
  background-position: -12rpx 0;
  background-attachment: fixed;
  /* background-size: contain; */
  background-size: 762rpx 800rpx;
  background-repeat: no-repeat;
  overflow-x: hidden;
}
.head{
  /* background-color: #bfa; */
  color: white;
  padding-top: 65rpx;
  padding-left: 60rpx;
  text-shadow: 5rpx 5rpx rgba(0,0,0,.2);
  position: fixed;
}
.head .welcome{
  font-size: 52rpx;
  margin-bottom: 16rpx;
}
.head .date{
  font-size: 52rpx;
}
.head .tips{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.body{
  margin-top: 320rpx;
  position: relative;
}
.body .content_wrapper{
  background-color: #f5f5f5;
  /* height: 1000rpx; */
  padding-top: 40rpx;
  border-radius: 130rpx 0 0 0/100rpx 0 0 0;
  box-shadow: -10rpx -10rpx 10rpx rgba(0, 0, 0,.2);
}
.body .content_round{
  width: 350rpx;
  height: 100rpx;
  background-color: transparent;
  position: absolute;
  top: -100rpx;
  margin-left: 402rpx;
  border-radius: 0 0 200rpx 0/0 0 60rpx 0;
  border-bottom: 10rpx solid #f5f5f5;
  border-right: 100rpx solid #f5f5f5;
  box-shadow:inset 0 -10rpx 10rpx rgba(0, 0, 0,.2);
 
}

.body .content_wrapper .filter_bar{
  margin-left: 65rpx;
  width: 620rpx;
  height: 100rpx;
  background-color: rgb(230,230,230);
  border-radius: 50rpx;
  transition: width 1s, margin-left 1s;
  overflow: hidden;
  position: relative;
}
.body .content_wrapper .filter_bar.unchosen{
  margin-left: 585rpx;
  width: 100rpx;
  overflow: hidden;
}
.body .content_wrapper .filter_bar .left_content{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 60rpx;
  font-size: 35rpx;
  color: rgb(128,128,128);
}
.body .content_wrapper .filter_bar .left_content .item{
  float: left;
  margin: 0 5rpx;
}
.body .content_wrapper .filter_bar .left_content .item.text.active{
  color: rgb(58,114,150);
  text-shadow: 2rpx 2rpx rgba(157, 205, 235,.5);
}
.body .content_wrapper .filter_bar .right_icon{
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
}
.body .content_wrapper .filter_bar .right_icon image{
  width: 100rpx;
  height: 100rpx;
}
.body .content_wrapper .activity_list .fillTextContainer{
  width: 100%;
  height: 200rpx;
  /* background-color: #bfa; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  color: rgb(128, 128, 128);
}

